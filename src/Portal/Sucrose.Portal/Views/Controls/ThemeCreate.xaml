<ui:ContentDialog
    x:Class="Sucrose.Portal.Views.Controls.ThemeCreate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sucrose.Portal.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vcontrols="clr-namespace:Sucrose.Portal.Views.Controls"
    Title="{DynamicResource Portal.ThemeCreate.Title}"
    d:DesignHeight="7500"
    d:DesignWidth="750"
    CloseButtonText="{DynamicResource Portal.ThemeCreate.Close}"
    DialogMaxWidth="750"
    IsPrimaryButtonEnabled="False"
    IsSecondaryButtonEnabled="False"
    Loaded="ContentDialog_Loaded"
    PreviewKeyDown="ContentDialog_PreviewKeyDown"
    PrimaryButtonText="{DynamicResource Portal.ThemeCreate.Create}"
    SecondaryButtonAppearance="Success"
    SecondaryButtonIcon="{ui:SymbolIcon Clock24}"
    SecondaryButtonText="{DynamicResource Portal.ThemeCreate.Creating}"
    mc:Ignorable="d">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:ThemeCreate}" />
    </ui:ContentDialog.Resources>

    <StackPanel
        MinWidth="400"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <StackPanel
            x:Name="CreateCard"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <ui:Button
                x:Name="GifCreate"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Appearance="Transparent"
                BorderBrush="Transparent"
                Click="GifCreate_Click"
                Cursor="Hand">
                <vcontrols:ExpanderCard
                    x:Name="GifExpander"
                    Expandable="False"
                    IsEnabled="False"
                    LeftIconSymbol="Gif24">
                    <vcontrols:ExpanderCard.HeaderFrame>
                        <ui:SymbolIcon
                            Width="32"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Symbol="ChevronRight24" />
                    </vcontrols:ExpanderCard.HeaderFrame>
                </vcontrols:ExpanderCard>
            </ui:Button>

            <ui:Button
                x:Name="UrlCreate"
                Margin="0,3,0,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Appearance="Transparent"
                BorderBrush="Transparent"
                Click="UrlCreate_Click"
                Cursor="Hand">
                <vcontrols:ExpanderCard
                    x:Name="UrlExpander"
                    Expandable="False"
                    IsEnabled="False"
                    LeftIconSymbol="SlideLink24">
                    <vcontrols:ExpanderCard.HeaderFrame>
                        <ui:SymbolIcon
                            Width="32"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Symbol="ChevronRight24" />
                    </vcontrols:ExpanderCard.HeaderFrame>
                </vcontrols:ExpanderCard>
            </ui:Button>

            <ui:Button
                x:Name="WebCreate"
                Margin="0,3,0,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Appearance="Transparent"
                BorderBrush="Transparent"
                Click="WebCreate_Click"
                Cursor="Hand">
                <vcontrols:ExpanderCard
                    x:Name="WebExpander"
                    Expandable="False"
                    IsEnabled="False"
                    LeftIconSymbol="GlobeDesktop24">
                    <vcontrols:ExpanderCard.HeaderFrame>
                        <ui:SymbolIcon
                            Width="32"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Symbol="ChevronRight24" />
                    </vcontrols:ExpanderCard.HeaderFrame>
                </vcontrols:ExpanderCard>
            </ui:Button>

            <ui:Button
                x:Name="VideoCreate"
                Margin="0,3,0,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Appearance="Transparent"
                BorderBrush="Transparent"
                Click="VideoCreate_Click"
                Cursor="Hand">
                <vcontrols:ExpanderCard
                    x:Name="VideoExpander"
                    Expandable="False"
                    IsEnabled="False"
                    LeftIconSymbol="VideoClip24">
                    <vcontrols:ExpanderCard.HeaderFrame>
