                        Cursor="Hand"
                        Icon="{ui:SymbolIcon ArrowUndo24}"
                        Visibility="Collapsed" />
                </StackPanel>
            </Grid>

            <TextBlock
                Margin="0,12,0,0"
                FontSize="16"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{DynamicResource Portal.ThemeCreate.ThemeThumbnail}"
