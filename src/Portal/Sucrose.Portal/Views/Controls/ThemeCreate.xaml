                Text="{DynamicResource Portal.ThemeCreate.ThemeTitle}"
                TextWrapping="WrapWithOverflow" />
            <ui:TextBox
                x:Name="GifTitle"
                Margin="0,3,0,0"
                AcceptsReturn="False"
                AcceptsTab="False"
                MaxLength="50"
