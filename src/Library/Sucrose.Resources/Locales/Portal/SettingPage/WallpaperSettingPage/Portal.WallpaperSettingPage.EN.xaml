<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:String x:Key="Portal.WallpaperSettingPage.Title">WallpaperSettingPage</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.InputMode">Interaction Method</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.InputMode.Description">Determines the methods through which interaction can occur with supported wallpapers.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.InputMode.InputModule">Interaction Module:</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.InputMode.InputDesktop">Process interaction only when desktop is focused</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.InputMode.DesktopIcon">Hide to avoid accidentally selecting desktop icons</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.ScreenLayout">Screen Layout</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.ScreenLayout.Description">Change the layout of your wallpapers on the screen.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.StretchMode">Stretch Mode</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.StretchMode.Description">Change the scaling mode for supported wallpapers.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.LoopMode">Loop Mode</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.LoopMode.Description">Change the looping behavior for supported wallpapers.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.ShuffleMode">Shuffle Mode</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.ShuffleMode.Description">Change the shuffle behavior for supported wallpapers.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.BackgroundImage">Background Image</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.BackgroundImage.Description">Changes the live wallpaper to a desktop background image.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.HardwareAcceleration">Hardware Acceleration</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.HardwareAcceleration.Description">Changes the hardware acceleration behavior for supported wallpapers.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.GifPlayer">Gif Player</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.GifPlayer.Description">Select the plugin that will play Gif-themed wallpapers in your library.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.VideoPlayer">Video Player</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.VideoPlayer.Description">Select the plugin that will play Video-themed wallpapers in your library.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.UrlPlayer">Url Engine</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.UrlPlayer.Description">Select the engine that will run Url-themed wallpapers in your library.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.WebPlayer">Web Engine</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.WebPlayer.Description">Select the engine that will run Web-themed wallpapers in your library.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.YouTubePlayer">YouTube Engine</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.YouTubePlayer.Description">Select the engine that will run YouTube-themed wallpapers in your library.</system:String>

    <system:String x:Key="Portal.WallpaperSettingPage.ApplicationPlayer">Application Engine</system:String>
    <system:String x:Key="Portal.WallpaperSettingPage.ApplicationPlayer.Description">Select the engine that will run Application-themed wallpapers in your library.</system:String>
</ResourceDictionary>